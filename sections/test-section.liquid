<div class="test-section" data-ref="test-section" style="{% render 'color-scheme' %}">
  <p>{{ section.settings.text }}</p>

  <div class="primary">Primary color</div>
  <div class="secondary">Secondary color</div>

  {% render 'image', image: section.settings.image %}
</div>

{% render '_preview-trigger' %}

{% schema %}
{
  "name": "Test section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "This is a test section"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme_1"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Test section"
    }
  ]
}
{% endschema %}
