<section id="main_product" class="grid gap-4 md:grid-cols-2">
  <div class="col-span-2 grid justify-items-center items-start gap-4 md:grid-cols-2">
    <div class="w-full">
      {% if section.settings.image_carousel %}
        {% render 'variant-images-carousel' %}
      {% else %}
        {% assign image = product.selected_or_first_available_variant.featured_image
          | default: product.featured_image
        %}

        {% render 'image', image: image, sizes: '100vw, 40vw', loading: 'eager', id: 'product_image' %}

        <div class="flex gap-4 pl-4 mt-4">
          {% render 'variant-images' %}
        </div>
      {% endif %}
    </div>

    <div id="product_info" class="lg:sticky lg:top-[20vh] w-full max-md:px-4 md:w-sm p-5">
      <h1 class="mb-1">{{ product.title }}</h1>

      <div class="mb-4" id="product_price">
        {% content_for 'block',
          type: '_product-price',
          id: 'price',
          variant: product.selected_or_first_available_variant
        %}
      </div>

      {% assign target = 'main_product' %}

      {% if section.settings.image_carousel == true %}
        {% assign target = 'product_info' %}
      {% endif %}

      {% render 'variant-picker', target: target %}

      {% content_for 'block', type: '_product-form', id: 'product_form' %}

      {%- unless product.description == '<p></p>' -%}
        <details class="mt-4 border-t border-gray-200">
          <summary class="my-4 cursor-pointer text-xs tracking-wider uppercase">Description</summary>

          <div class="mb-4 text-xs leading-normal">{{ product.description }}</div>
        </details>
      {%- endunless -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main product",
  "enabled_on": {
    "templates": ["product"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "image_carousel",
      "label": "Image carousel",
      "info": "Makes a carousel of the product images"
    }
  ],
  "presets": [
    {
      "name": "Main product"
    }
  ]
}
{% endschema %}
