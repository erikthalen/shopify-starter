<section id="main_product" class="grid gap-4 md:grid-cols-2">
  <div class="col-span-2 grid items-start justify-items-center gap-4 md:grid-cols-2">
    <div class="w-full">
      {% render 'product-images-carousel' %}

      {% comment %}
        <div class="flex gap-4 pl-4 mt-4">
          {% render 'variant-images' %}
        </div>
      {% endcomment %}
    </div>

    <div class="w-full p-5 max-md:px-4 md:w-sm lg:sticky lg:top-[20vh]">
      <div id="product_info">
        <h1 class="mb-1">{{ product.title }}</h1>

        <div class="mb-4" id="product_price">
          {%
            content_for 'block',
            type: '_product-price',
            id: 'price',
            variant: product.selected_or_first_available_variant
          %}
        </div>

        {% render 'variant-picker', swap_ids: 'product_info variant_id' %}
      </div>

      {% content_for 'block', type: '_product-form', id: 'product_form' %}

      {%- unless product.description == '<p></p>' -%}
        <details id="product_description" class="mt-4 border-t border-gray-200">
          <summary class="py-4 cursor-pointer text-xs tracking-wider uppercase">Description</summary>

          <div>
            <div class="pb-4 text-xs leading-normal">{{ product.description }}</div>
          </div>
        </details>
      {%- endunless -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main product",
  "enabled_on": {
    "templates": ["product"]
  },
  "presets": [
    {
      "name": "Main product"
    }
  ]
}
{% endschema %}
