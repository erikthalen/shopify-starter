<dialog
  id="cart_notification"
  x-data="cartNotification"
  class="fixed z-11 left-auto top-14 right-4 rounded px-4 py-3 w-full max-w-md"
  closedby="any"
>
  {% comment %}
    Content is injected from
    `/sections/cart-notification-content.liquid`
    by typescript
  {% endcomment %}
</dialog>

{% comment %} backdrop {% endcomment %}
<div
  class="pointer-events-none fixed top-0 left-0 z-8 h-screen w-screen bg-black/25 opacity-0 transition-opacity duration-500"
></div>

{% stylesheet %}
  dialog#cart_notification[open] {
    transform: translateY(0);
    opacity: 1;

    /* show backdrop */
    + div {
      opacity: 1;
      pointer-events: all;
    }
  }

  dialog#cart_notification {
    --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);

    transform: translateY(0.5rem);
    opacity: 0;
    transition: all 200ms var(--ease-in-out) allow-discrete;
  }

  @starting-style {
    dialog#cart_notification[open] {
      transform: translateY(0.5rem);
      opacity: 0;
    }
  }

  dialog#cart_notification::backdrop {
    background-color: transparent;
    transition: all 200ms var(--ease-in-out) allow-discrete;
  }

  dialog#cart_notification[open]::backdrop {
    background-color: rgb(0 0 0 / 25%);
  }

  @starting-style {
    dialog#cart_notification[open]::backdrop {
      background-color: transparent;
    }
  }
{% endstylesheet %}
